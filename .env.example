# MEXC API Configuration
# Get your API keys from https://www.mexc.com/user/api
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET=your_mexc_secret_here

# Telegram Bot Configuration
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Trading Configuration
# Default trading pair (e.g., BTCUSDT, ETHUSDT)
DEFAULT_SYMBOL=BTCUSDT

# Candle interval (1m, 5m, 15m, 30m, 60m, 4h, 1d, 1w, 1M)
INTERVAL=60m

# EMA Configuration
# Fast EMA period (typically 12)
FAST_EMA=12

# Slow EMA period (typically 26)
SLOW_EMA=26

# MEXC Client Configuration
# Base URL for MEXC API
MEXC_BASE_URL=https://api.mexc.com

# Number of klines to fetch per request (max 1000)
KLINE_LIMIT=100

# Polling interval in seconds (how often to check for new data)
POLL_INTERVAL=60

# Maximum number of retry attempts for failed requests
MAX_RETRIES=3

# Initial retry delay in seconds (uses exponential backoff)
RETRY_DELAY=5

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Path to log file (leave empty to log to console only)
# LOG_FILE=logs/bot.log

# FastAPI Configuration
# Host to bind FastAPI server to
FASTAPI_HOST=127.0.0.1

# Port to bind FastAPI server to
FASTAPI_PORT=8000

# Enable auto-reload for development (true/false)
FASTAPI_RELOAD=false

# GPU/CUDA Configuration
# Enable GPU support (true/false)
GPU_ENABLED=true

# CUDA device index to use (0 for first GPU)
CUDA_DEVICE=0

# Force CPU usage even if GPU is available (true/false)
FORCE_CPU=false

# FFmpeg Configuration
# Custom FFmpeg binary path (leave empty to use PATH)
# FFMPEG_PATH=/usr/bin/ffmpeg

# Custom FFprobe binary path (leave empty to use PATH)
# FFPROBE_PATH=/usr/bin/ffprobe

# FFmpeg command timeout in seconds
FFMPEG_TIMEOUT=30

# System Configuration
# nvcc command timeout in seconds
NVCC_TIMEOUT=10

# GPU memory fraction to use (0.0-1.0, leave empty for default)
# GPU_MEMORY_FRACTION=0.8

# Enable GPU monitoring (true/false)
ENABLE_GPU_MONITORING=true
