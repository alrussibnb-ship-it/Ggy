# MEXC API Configuration
# Get your API keys from https://www.mexc.com/user/api
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET=your_mexc_secret_here

# Telegram Bot Configuration
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Trading Configuration
# Default trading pair (e.g., BTCUSDT, ETHUSDT)
DEFAULT_SYMBOL=BTCUSDT

# Candle interval (1m, 5m, 15m, 30m, 1h, 4h, 1d, etc.)
INTERVAL=1h

# EMA Configuration
# Fast EMA period (typically 12)
FAST_EMA=12

# Slow EMA period (typically 26)
SLOW_EMA=26

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Path to log file (leave empty to log to console only)
# LOG_FILE=logs/bot.log
