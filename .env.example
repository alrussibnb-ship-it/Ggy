# =================================================================
# DUAL-STACK AUDIO PROCESSING APPLICATION
# =================================================================

# -----------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------
APP_NAME=Audio Processing API
VERSION=1.0.0
DEBUG=true

# -----------------------------------------------------------------
# BACKEND (FastAPI + Celery) SETTINGS
# -----------------------------------------------------------------

# Server configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis configuration for Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Storage paths
STORAGE_ROOT=./storage
UPLOADS_DIR=./storage/uploads
MEDIA_DIR=./storage/media
OUTPUTS_DIR=./storage/outputs

# -----------------------------------------------------------------
# AUDIO/VIDEO PROCESSING SETTINGS
# -----------------------------------------------------------------

# FFmpeg configuration
FFMPEG_PATH=ffmpeg
FFMPEG_TIMEOUT=300

# Whisper model settings
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# Translation service settings
TRANSLATION_PROVIDER=googletrans
GOOGLETRANS_API_KEY=

# -----------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------
# GPU SETTINGS
# -----------------------------------------------------------------
ENABLE_GPU=false
CUDA_VISIBLE_DEVICES=0

# -----------------------------------------------------------------
# FILE PROCESSING LIMITS
# -----------------------------------------------------------------
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=.mp3,.mp4,.wav,.m4a,.avi,.mov,.mkv

# -----------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=

# -----------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------
# Set to true to enable development features
DEV_MODE=true

# -----------------------------------------------------------------
# WINDOWS COMPATIBILITY (for Redis)
# -----------------------------------------------------------------
# Windows users can use either:
# 1. WSL: Install Redis in WSL and set REDIS_URL accordingly
# 2. Native: Install Redis for Windows or use Docker
# 3. Docker: Use docker-compose.yml for easy Redis setup
